{
  // Used solely to emit types into dist/types
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "../dist/umd/",
    "rootDir": "../src",
    "allowJs": false,
    "declaration": true,
    "isolatedModules": true
  },
  "include": ["../src/umd/**/*"],
  "exclude": ["../node_modules/", "../**/*.test.*"]
}
