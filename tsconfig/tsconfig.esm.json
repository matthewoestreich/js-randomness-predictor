{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "../dist/staging/esm",
    "rootDir": "../src",
    "allowJs": false,
    "isolatedModules": true,
    "removeComments": true
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules/", "../**/*.test.*", "../src/browser/**/*", "../src/cli/**/*"]
}
