{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["DOM", "es5"],
    "allowJs": true,
    "outDir": "../../dist/staging/cjs",
    "rootDir": "../../src",
    "removeComments": true
  },
  "include": ["../../src/**/*"],
  "exclude": ["../../node_modules", "../../**/*.test.*", "../../src/cli/**/*", "../../src/browser/**/*"]
}
